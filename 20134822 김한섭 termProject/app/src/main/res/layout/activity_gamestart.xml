<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_gamestart"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/sample3"
    tools:context="com.example.khseob0715.puzzlegame.GstartActivity"
    android:orientation="vertical">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <ImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:srcCompat="@drawable/profil"
            android:id="@+id/mainprofil"
            android:layout_gravity="center"
            android:layout_weight="1" />

        <TextView
            android:text="별명없음"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/nametext"
            android:layout_weight="1"
            android:background="@drawable/shape_list"
            android:layout_gravity="center"
            android:textStyle="normal|bold"
            android:textColor="#000000"
            android:textAlignment="center" />

        <ImageView
            app:srcCompat="@drawable/new_heart1"
            android:layout_gravity="center"
            android:id="@+id/heartUI"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:gravity="right"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            app:srcCompat="@drawable/selecticon1"
            android:id="@+id/imageView10"
            android:onClick="itemBox"
            android:layout_gravity="right"
            android:layout_height="80dp"
            android:layout_weight="0.04"
            android:layout_width="80dp" />

        <ImageView
            app:srcCompat="@drawable/selecticon2"
            android:id="@+id/imageView9"
            android:layout_weight="0.52"
            android:onClick="friBox"
            android:layout_width="80dp"
            android:layout_height="80dp" />

        <ImageView
            app:srcCompat="@drawable/selecticon3"
            android:id="@+id/imageView8"
            android:layout_weight="0.52"
            android:onClick="preBox"
            android:layout_width="80dp"
            android:layout_height="80dp" />

        <ImageView
            app:srcCompat="@drawable/selecticon4"
            android:id="@+id/imageView7"
            android:layout_weight="0.52"
            android:onClick="setting"
            android:layout_width="80dp"
            android:layout_height="80dp" />

    </LinearLayout>

    <Space
        android:layout_width="match_parent"
        android:layout_height="60dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        app:srcCompat="@drawable/xbutton"
        android:id="@+id/imageView28"
        android:layout_marginLeft="250dp"
        android:onClick="xbutton"
        />

    <TextView
        android:text="Level 1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView3"
        android:textAlignment="center"
        android:textStyle="normal|bold"
        android:textSize="70sp"
        android:textColor="@android:color/background_dark" />

    <ImageView
        android:layout_width="195dp"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/missionscroe"
        android:layout_gravity="center"
        android:id="@+id/missiontext" />

    <TextView
        android:text="3000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:textAlignment="center"
        android:textStyle="normal|bold"
        android:textColor="@android:color/background_light"
        android:textSize="24sp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_weight="0.00" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/startbtn2"
        android:id="@+id/imageView20"
        android:onClick="startgame"/>
    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_weight="0.00" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srcCompat="@drawable/rank"
        android:id="@+id/imageView53"
        android:layout_gravity="center"
        android:onClick="Rankactivity"
        android:visibility="invisible"/>

</LinearLayout>
